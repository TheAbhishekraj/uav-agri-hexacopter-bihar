<?xml version="1.0" ?>
<sdf version="1.9">
  <model name="hexacopter_agricultural">
    <pose>0 0 0.2 0 0 0</pose>
    <self_collide>false</self_collide>
    <static>false</static>
    
    <link name="base_link">
      <inertial>
        <!-- Requirement: Inertial Matrix reflecting 15kg load -->
        <mass>15.0</mass>
        <inertia>
          <ixx>0.8</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.8</iyy>
          <iyz>0</iyz>
          <izz>1.5</izz>
        </inertia>
      </inertial>
      
      <visual name="body_visual">
        <geometry>
          <cylinder>
            <radius>0.5</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.1 0.1 0.1 1</diffuse>
        </material>
      </visual>
      <collision name="body_collision">
        <geometry>
          <cylinder>
            <radius>0.5</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
      </collision>

      <!-- Requirement: GPS/RTK Noise -->
      <sensor name="navsat" type="navsat">
        <always_on>1</always_on>
        <update_rate>10</update_rate>
        <topic>navsat</topic>
        <navsat>
          <position_sensing>
            <horizontal>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>0.05</stddev> <!-- RTK precision simulation -->
              </noise>
            </horizontal>
            <vertical>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>0.05</stddev>
              </noise>
            </vertical>
          </position_sensing>
        </navsat>
      </sensor>
    </link>

    <!-- Requirement: Thrust Mapping (6 Motors) -->
    
    <!-- Motor 0 (CCW) -->
    <link name="rotor_0">
      <pose>0.4 0 0.1 0 0 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>9.75e-07</ixx>
          <iyy>0.000273104</iyy>
          <izz>0.000274004</izz>
        </inertia>
      </inertial>
    </link>
    <joint name="rotor_0_joint" type="revolute">
      <child>rotor_0</child>
      <parent>base_link</parent>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1e+16</lower>
          <upper>1e+16</upper>
        </limit>
      </axis>
    </joint>
    <plugin filename="gz-sim-multicopter-motor-model-system" name="gz::sim::systems::MulticopterMotorModel">
      <robotNamespace>hexacopter_agricultural</robotNamespace>
      <jointName>rotor_0_joint</jointName>
      <linkName>rotor_0</linkName>
      <turningDirection>ccw</turningDirection>
      <timeConstantUp>0.0125</timeConstantUp>
      <timeConstantDown>0.025</timeConstantDown>
      <maxRotVelocity>1100</maxRotVelocity>
      <motorConstant>8.54858e-06</motorConstant>
      <momentConstant>0.06</momentConstant>
      <commandSubTopic>command/motor_speed</commandSubTopic>
      <motorNumber>0</motorNumber>
      <rotorDragCoefficient>0.000175</rotorDragCoefficient>
      <rollingMomentCoefficient>1.0e-6</rollingMomentCoefficient>
    </plugin>

    <!-- Motor 1 (CW) -->
    <link name="rotor_1">
      <pose>0.2 0.346 0.1 0 0 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>9.75e-07</ixx>
          <iyy>0.000273104</iyy>
          <izz>0.000274004</izz>
        </inertia>
      </inertial>
    </link>
    <joint name="rotor_1_joint" type="revolute">
